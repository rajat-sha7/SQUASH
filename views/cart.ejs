<%- include('./partials/header') %>
    <div class="w-full h-screen flex flex-col px-20 py-20 gap-10">
        <div class="w-full flex gap-10">
            <div class="w-[30%] rounded-md overflow-hidden">
                <% if (user.cart.length > 0) { %>
                    <% 
                        // Group items by product ID
                        const groupedItems = user.cart.reduce((acc, item) => {
                            if (!acc[item._id]) {
                                acc[item._id] = { ...item, count: 0, totalPrice: 0 };
                            }
                            acc[item._id].count += 1;
                            acc[item._id].totalPrice += (item.price - item.discount);
                            return acc;
                        }, {});
                    %>
                    <% Object.values(groupedItems).forEach(function(item) { %>
                        <div class="w-full justify-center align-center h-80 bg-[<%= item.bgcolor || '#f0f0f0' %>]">
                            <img class="h-[18rem]" src="data:image/jpeg;base64,<%= item.image ? item.image.toString('base64') : '' %>" alt="">
                        </div>
                        <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor || '#ffffff' %>] text-[<%= item.textcolor || '#000000' %>]">
                            <h3 class="text-2xl"><%= item.name %></h3>
                            <div class="flex items-center gap-2">
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.count %></div>
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </div>
                        </div>
                        <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.bgcolor || '#f0f0f0' %>]">
                            <h4 class="text-lg">Net Total</h4>
                            <h2 class="text-lg">₹ <%= item.totalPrice + 20 %></h2>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="w-full h-80 flex items-center justify-center">
                        <h3 class="text-xl">Your cart is empty.</h3>
                    </div>
                <% } %>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <% if (user.cart.length > 0) { %>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Total MRP</h4>
                            <h4>₹ <%= user.cart.reduce((total, item) => total + item.price, 0) %></h4>
                        </div>
                        <div class="flex mt-2">
                            <h4 class="w-1/3">Discount on MRP</h4>
                            <h4>₹ <%= user.cart.reduce((total, item) => total + item.discount, 0) %></h4>
                        </div>
                    <% } %>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= user.cart.reduce((total, item) => total + item.price - item.discount, 0) + 20 %></h3>
                </div>
                <form action="">
                    <button type="submit" class="mt-5 px-4 py-2 bg-blue-500 text-white rounded">Proceed to Checkout</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>