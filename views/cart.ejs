<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden">
            <% if ( user.cart[0]) { %>
                <div class="w-full justify-center align-center h-80 bg-[<%= user.cart[0].bgcolor || 'defaultColor' %>]">
                    <img class="h-[18rem]" src="data:image/jpeg;base64,<%= user.cart[0].image ? user.cart[0].image.toString('base64') : '' %>" alt="">
                </div>
                <div class="w-full flex justify-between px-5 py-4 bg-[<%= user.cart[0].panelcolor || 'defaultColor' %>]">
                    <h3 class="text-2xl"><%= user.cart[0].name %></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <!-- <div class="flex items-center justify-between px-5 py-3 bg-[<%= user.cart[0].textcolor || 'defaultColor' %>]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= user.cart[0].price !== null && user.cart[0].price !== undefined ? user.cart[0].price : 0 %></h2>
                </div> -->
            <% } else { %>
                <div class="w-full h-80 flex items-center justify-center">
                    <h3 class="text-xl">Your cart is empty.</h3>
                </div>
            <% } %>
        </div>
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ </h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ </h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <%- include('./partials/footer') %>